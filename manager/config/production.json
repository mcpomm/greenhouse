{
  "Monitoring": {
    "ThingSpeakAPI": "https://api.thingspeak.com/update.json",
    "CheckIntervalMinutes": 5,
    "CheckIntervalCountPerEvaluation": 10,
    "TresholdLimitPercentage": 60
  },
  "Apis": {
    "Temperature": {
      "Endpoint": "http://greenhouse-temperature:5000",
      "TresholdMin": 20,
      "TresholdMax": 25
    },
    "Humidity": {
      "Endpoint": "http://greenhouse-humidity:5100",
      "TresholdMin": 70,
      "TresholdMax": 80
    },
    "SoilMoisture": {
      "Endpoint": "http://greenhouse-soil-moisture:5200",
      "TresholdMin": 50,
      "TresholdMax": 80
    },
    "SoilTemperature": {
      "Endpoint": "http://greenhouse-soil-temperature:5300",
      "TresholdMin": 18,
      "TresholdMax": 21
    },
    "WaterPump01": {
      "Endpoint": "http://greenhouse-trigger:5400/soil-watering/trigger",
      "Duration": 4
    },
    "HeatingPad": {
      "Endpoint": "http://greenhouse-trigger:5400/soil-heating/trigger",
      "Duration": 4
    },
    "Fan": {
      "Endpoint": "http://greenhouse-trigger:5400/fan/trigger",
      "Duration": 4
    },
    "Heating": {
      "Endpoint": "http://greenhouse-trigger:5400/air-heating/trigger",
      "Duration": 4
    },
    "WaterPump02": {
      "Endpoint": "http://greenhouse-trigger:5400/tank-filling/trigger",
      "Duration": 4
    }
  }
}
